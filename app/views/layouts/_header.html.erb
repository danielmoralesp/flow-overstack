<header class="navbar navbar-default">
  <div class="container-fluid">
    <%= link_to "FlowOverstack", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <%= form_tag root_path, method:"get", class: "navbar-form navbar-left" do %>
          <div class="form-group">
          <%= text_field_tag :search, params[:search], placeholder: "Buscar", class: "form-control" %>
          </div>
            <%= submit_tag "Buscar", class:"btn btn-default" %>
          <% end %>

         <ul class="nav navbar-nav">
           <% if logged_in? %>
           <li><%= link_to "Log out", logout_path, method: "delete" %></li>
           <% else %>
           <li><%= link_to 'Registrarse', signup_path %></li>
           <li><%= link_to 'Ingresar', login_path %></li>
           <% end %>
         </ul>

      </ul>
    </nav>
  </div>
  </div>
</header>
